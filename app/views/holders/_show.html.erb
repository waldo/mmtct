<div class="row">
  <div class="fourteen columns">
    <h3><%= holder.name %> - <%= holder.recipe_title %> - <%= holder.created_at.strftime("%e %B %Y") %></h3>
  </div>
  <div class="one columns">
    <p>Edit - TODO</p>
  </div>
</div>

